        <!-- Similar structure for sections C and D can be added -->
    </timetable>

    <!-- Rooms Configuration -->
    <rooms>
        <room id="A101" name="Classroom A101" capacity="45" type="Theory"/>
        <room id="A102" name="Classroom A102" capacity="45" type="Theory"/>
        <room id="A103" name="Classroom A103" capacity="45" type="Theory"/>
        <room id="B101" name="Classroom B101" capacity="45" type="Theory"/>
        <room id="B102" name="Classroom B102" capacity="45" type="Theory"/>
        <room id="B103" name="Classroom B103" capacity="45" type="Theory"/>
        <room id="Lab1" name="Computer Lab 1" capacity="30" type="Lab"/>
        <room id="Lab2" name="Computer Lab 2" capacity="30" type="Lab"/>
        <room id="Lab3" name="Computer Lab 3" capacity="30" type="Lab"/>
    </rooms>

    <!-- Notification Templates -->
    <notifications>
        <template id="class-reminder" title="Class Reminder">
            <message>Your {subject} class starts in {minutes} minutes in {room}</message>
            <icon>fa-clock</icon>
            <type>upcoming</type>
        </template>
        <template id="attendance-time" title="Attendance Time">
            <message>Attendance is now open for {subject}. Please mark your attendance.</message>
            <icon>fa-calendar-check</icon>
            <type>attendance-time</type>
        </template>
        <template id="urgent-notice" title="Urgent Notice">
            <message>{message}</message>
            <icon>fa-exclamation-triangle</icon>
            <type>urgent</type>
        </template>
    </notifications>

    <!-- Security Configuration -->
    <security>
        <device-fingerprinting>
            <enabled>true</enabled>
            <factors>
                <factor>user-agent</factor>
                <factor>screen-resolution</factor>
                <factor>timezone</factor>
                <factor>language</factor>
                <factor>platform</factor>
                <factor>canvas-fingerprint</factor>
            </factors>
        </device-fingerprinting>
        <session-security>
            <enforce-https>true</enforce-https>
            <secure-cookies>true</secure-cookies>
            <csrf-protection>true</csrf-protection>
        </session-security>
    </security>

    <!-- Feature Flags -->
    <features>
        <feature name="qr-attendance" enabled="true"/>
        <feature name="manual-attendance" enabled="true"/>
        <feature name="bulk-operations" enabled="true"/>
        <feature name="export-reports" enabled="true"/>
        <feature name="notifications" enabled="true"/>
        <feature name="dark-theme" enabled="true"/>
        <feature name="offline-mode" enabled="false"/>
    </features>

    <!-- API Configuration -->
    <api>
        <base-url>http://localhost:3000</base-url>
        <version>v1</version>
        <timeout>30000</timeout> <!-- milliseconds -->
        <retry-attempts>3</retry-attempts>
    </api>

    <!-- Storage Configuration -->
    <storage>
        <local-storage>
            <max-size>10485760</max-size> <!-- 10MB in bytes -->
            <encryption>false</encryption>
        </local-storage>
        <session-storage>
            <enabled>true</enabled>
        </session-storage>
    </storage>

    <!-- Backup Configuration -->
    <backup>
        <auto-backup>true</auto-backup>
        <interval>24</interval> <!-- hours -->
        <retention>30</retention> <!-- days -->
    </backup>

    <!-- Logging Configuration -->
    <logging>
        <level>INFO</level>
        <console>true</console>
        <file>false</file>
        <max-entries>1000</max-entries>
    </logging>
</attendance-system-config>