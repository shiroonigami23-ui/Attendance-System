<?xml version="1.0" encoding="UTF-8"?>
<attendance-system-config>
    <!-- System Information -->
    <system>
        <name>Advanced Campus Attendance System</name>
        <institution>RJIT BSF Academy</institution>
        <version>2.0</version>
        <academic-year>2024-25</academic-year>
        <semester>Winter</semester>
    </system>

    <!-- Roll Number Configuration -->
    <roll-numbers>
        <!-- CS Students: 0902CS231001 to 0902CS231150 -->
        <range>
            <type>CS</type>
            <prefix>0902CS231</prefix>
            <start>001</start>
            <end>150</end>
            <format>0902CS231XXX</format>
        </range>
        
        <!-- Department Students: D01 to D04 -->
        <range>
            <type>Department</type>
            <prefix>D</prefix>
            <start>01</start>
            <end>04</end>
            <format>DXX</format>
        </range>
    </roll-numbers>

    <!-- Sections Configuration -->
    <sections>
        <section id="A" name="Section A" capacity="40"/>
        <section id="B" name="Section B" capacity="40"/>
        <section id="C" name="Section C" capacity="35"/>
        <section id="D" name="Section D" capacity="35"/>
    </sections>

    <!-- Admin Configuration -->
    <admin>
        <username>admin</username>
        <password>ShiroOni</password>
        <email>admin@rjit.academy</email>
        <full-name>System Administrator</full-name>
    </admin>

    <!-- System Settings -->
    <settings>
        <max-devices-per-user>1</max-devices-per-user>
        <attendance-time-window>30</attendance-time-window> <!-- minutes -->
        <auto-logout-time>0</auto-logout-time> <!-- 0 means disabled -->
        <require-qr-for-attendance>false</require-qr-for-attendance>
        <enable-notifications>true</enable-notifications>
        <session-timeout>24</session-timeout> <!-- hours -->
        <max-login-attempts>3</max-login-attempts>
        <lockout-duration>15</lockout-duration> <!-- minutes -->
    </settings>

    <!-- Subjects Configuration -->
    <subjects>
        <subject code="CS501" name="Data Structures and Algorithms" type="Core" credits="4"/>
        <subject code="CS502" name="Computer Networks" type="Core" credits="4"/>
        <subject code="CS503" name="Database Management Systems" type="Core" credits="4"/>
        <subject code="CS504" name="Operating Systems" type="Core" credits="4"/>
        <subject code="CS505" name="Software Engineering" type="Core" credits="3"/>
        <subject code="CS506" name="Web Technologies" type="Core" credits="3"/>
        <subject code="CS507" name="Machine Learning" type="Elective" credits="3"/>
        <subject code="CS508" name="Cybersecurity" type="Elective" credits="3"/>
    </subjects>

